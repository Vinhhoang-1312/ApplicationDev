@model StaffTrainee.Models.ApplicationUser
@{
    ViewBag.Title = "EditTrainees";
}

<h2>EditTrainees</h2>


@Html.ValidationSummary(false,"", new { @class = "text-danger" })
@using (Html.BeginForm("EditTrainees", "Staff", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Id)
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.LabelFor(p => p.UserName)
        @Html.EditorFor(p => p.UserName, new { htmlAttributes = new { @class = "form-control" } })
      
            @Html.LabelFor(p => p.PhoneNumber)
            @Html.EditorFor(p => p.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(p => p.PhoneNumber, "", new { @class = "text-danger" })
            
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
}