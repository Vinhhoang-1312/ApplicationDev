@model IEnumerable<StaffTrainee.Models.Category>
@{ ViewBag.Title = "Index"; }

<h2>Index of Category Controller</h2>
<div class="form-group">
    @Html.ActionLink("Add new Categories", // <-- Link text
                                                                   "Create", // <-- Action Method Name
                                                                   "Categories", // <-- Controller Name
                                                                   null, // <-- Route value
                                                                   new { @class = "btn btn-info" } // <-- htmlArguments
                                                                   )
</div>



<!-- Load icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@using (Html.BeginForm("Index", "Categories", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", "")
        <button type="submit"><i class="fa fa-search"></i></button>
    </div>

}



<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
<tr>
    <th scope="row">@category.Id</th>
    <td>@category.Name</td>
    <td>@category.Description</td>
    <td>
    <td>

        @Html.ActionLink("Edit", // <-- Link text
                                                  "Edit", // <-- Action Method Name
                                                  "Categories", // <-- Controller Name
                                                  new { id = category.Id }, // <-- Route value
                                                  new { @class = "btn btn-default" })  @*htmlArguments*@

                                                @Html.ActionLink("Delete", // <-- Link text
                                                                                     "Delete", // <-- Action Method Name
                                                                                     "Categories", // <-- Controller Name
                                                                                     new { id = category.Id }, // <-- Route value
                                                                                     new { @class = "btn btn-danger" })   @*htmlArguments*@
                                                                                </td>
                                                                            </tr>
}
    </tbody>
</table>