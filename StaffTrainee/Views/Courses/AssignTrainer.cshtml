@model StaffTrainee.ViewModels.EnrollmentTrainerViewModel
@{
    ViewBag.Title = "AssignTrainer";
}

<h2>Asign Trainer To Course</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("AssignTrainer", "Courses", FormMethod.Post))
{

    <div class="form-group">
        USERNAME
        @Html.HiddenFor(m => m.CourseId)
        @Html.DropDownListFor(m => m.UserId,
         new SelectList(Model.Users, "Id", "Username"),
         new { @class = "form-control" }
         )
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add to Course</button>
    </div>
}