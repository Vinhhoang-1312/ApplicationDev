@model IEnumerable<StaffTrainee.Models.ApplicationUser>
@{
    ViewBag.Title = "GetTrainers";
}
@if (User.IsInRole("Admin"))
{
    <h2>Show all Trainer</h2>
    <h2></h2>
    @Html.ActionLink(
         "Create new Trainer",
         "CreateTrainer",
         "Account",
         null,
         new { @class = "btn btn-default" }
             )

    <h2></h2>





<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col"></th>
            <th scope="col">StaffList</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@trainer.UserName</td>
                <td></td>


                @if (User.IsInRole("Admin"))
                {
            <td>



                @Html.ActionLink("DeleteTrainers", // <-- Link text
                                                                    "DeleteTrainers", // <-- Action Method Name
                                                                    "Admin", // <-- Controller Name
                                                                    new { id = trainer.Id }, // <-- Route value
                                                                    new { @class = "btn btn-danger" })   @*htmlArguments*@

                                                                    @Html.ActionLink("EditTrainers", // <-- Link text
                                                                                                                      "EditTrainers", // <-- Action Method Name
                                                                                                                      "Admin", // <-- Controller Name
                                                                                                                      new { id = trainer.Id }, // <-- Route value
                                                                                                                      new { @class = "btn btn-info" })   @*htmlArguments*@



                                                                                                                </td>


}

            </tr>




        }
    </tbody>
</table>
}